#  input
input type:touchpad {
      tap enabled
#      events disabled
}
input "type:keyboard" {
      xkb_options ctrl:nocaps
}
input "1452:597:Apple_Wireless_Keyboard" {
    xkb_options altwin:swap_alt_win,ctrl:nocaps
}
set $mod Mod1
exec ydotoold

# output
output eDP-1 scale 1
output eDP-1 bg #000000 solid_color
exec mkfifo $SWAYSOCK.wob && tail -f $SWAYSOCK.wob | wob
#xwayland disable
bar {
        status_command i3status
	position top
}

# style
client.focused #008800 #008800 #ffffff #0000ff #000000
font pango:Terminus 8

#lighting control
set $kb sysfs/leds/chromeos::kbd_backlight
bindsym F1 exec light -U 0.25 && light -G | cut -d . -f1 > $SWAYSOCK.wob
bindsym F2 exec light -A 0.25 && light -G | cut -d . -f1 > $SWAYSOCK.wob
bindsym F6 exec light -U 0.25 && light -G | cut -d . -f1 > $SWAYSOCK.wob
bindsym F7 exec light -A 0.25 && light -G | cut -d . -f1 > $SWAYSOCK.wob
bindsym $mod+F6 exec light -U 1 -s $kb
bindsym $mod+F7 exec light -A 1 -s $kb
bindsym XF86PowerOff output * dpms on
bindsym XF86Tools output * dpms off
exec swayidle timeout 120 'light -O && light -S 0.5' resume 'light -I' \
     	      timeout 12 "light -O -s $kb && light -S 0 -s $kb" resume "light -I -s $kb" \
	      idlehint 120

# sound control
bindsym F8  exec pactl set-sink-mute @DEFAULT_SINK@ toggle && pamixer --get-volume > $SWAYSOCK.wob
bindsym F9  exec pactl set-sink-volume @DEFAULT_SINK@ -0.5% && pamixer --get-volume > $SWAYSOCK.wob
bindsym F10 exec pactl set-sink-volume @DEFAULT_SINK@ +0.5% && pamixer --get-volume > $SWAYSOCK.wob
bindsym F12 exec pactl set-sink-volume @DEFAULT_SINK@ +0.5% && pamixer --get-volume > $SWAYSOCK.wob
bindsym Shift+F12  exec pactl set-sink-volume @DEFAULT_SINK@ -0.5% && pamixer --get-volume > $SWAYSOCK.wob
bindsym XF86AudioLowerVolume exec pactl set-sink-volume @DEFAULT_SINK@ -0.5% && pamixer --get-volume > $SWAYSOCK.wob
bindsym XF86AudioRaiseVolume exec pactl set-sink-volume @DEFAULT_SINK@ +0.5% && pamixer --get-volume > $SWAYSOCK.wob

# window control
floating_modifier $mod
bindsym $mod+Return exec foot
bindsym $mod+Shift+q kill
bindsym $mod+d exec dmenu-wl_run
bindsym $mod+j focus left
bindsym $mod+k focus down
bindsym $mod+l focus up
bindsym $mod+semicolon focus right
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right
bindsym $mod+Up exec ydotool key PageUp
bindsym $mod+Down exec ydotool key PageDown
bindsym $mod+h split h
bindsym $mod+v split v
bindsym $mod+f fullscreen toggle
bindsym F4 fullscreen toggle
bindsym $mod+s layout stacking
bindsym $mod+w layout tabbed
bindsym $mod+e layout toggle split
bindsym $mod+Shift+space floating toggle
bindsym $mod+space focus mode_toggle
bindsym $mod+a focus parent
bindsym $mod+1 workspace number 1
bindsym $mod+2 workspace number 2
bindsym $mod+3 workspace number 3
bindsym $mod+4 workspace number 4
bindsym $mod+5 workspace number 5
bindsym $mod+6 workspace number 6
bindsym $mod+7 workspace number 7
bindsym $mod+8 workspace number 8
bindsym $mod+9 workspace number 9
bindsym $mod+0 workspace number 10
bindsym $mod+Shift+1 move container to workspace number 1
bindsym $mod+Shift+2 move container to workspace number 2
bindsym $mod+Shift+3 move container to workspace number 3
bindsym $mod+Shift+4 move container to workspace number 4
bindsym $mod+Shift+5 move container to workspace number 5
bindsym $mod+Shift+6 move container to workspace number 6
bindsym $mod+Shift+7 move container to workspace number 7
bindsym $mod+Shift+8 move container to workspace number 8
bindsym $mod+Shift+9 move container to workspace number 9
bindsym $mod+Shift+0 move container to workspace number 10
mode "resize" {
        bindsym Left resize shrink width 10 px or 10 ppt
        bindsym Down resize grow height 10 px or 10 ppt
        bindsym Up resize shrink height 10 px or 10 ppt
        bindsym Right resize grow width 10 px or 10 ppt
        bindsym Return mode "default"
        bindsym Escape mode "default"
        bindsym $mod+r mode "default"
}
bindsym $mod+r mode "resize"
