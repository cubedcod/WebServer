#!/bin/sh
user=$(id -u)
base=$(realpath ~/src/WebServer)
bin=$base/bin
config=$base/config
su -c "sh $bin/net $user"                                      # network
mkdir -p log; squid -f $config/squid.conf                      # request router
unicorn -N -l 127.0.0.1:8000 -l [::1]:8000 $config/daemon.ru & # local server
$bin/log                                                       # log viewer
