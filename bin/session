#!/bin/sh
base=$(realpath ~/src/WebServer)
user=$(id -u)
su -c "sh $base/bin/net $user"                                      # network
mkdir -p log; squid -f $base/config/squid.conf                      # request router
unicorn -N -l 127.0.0.1:8000 -l [::1]:8000 $base/config/daemon.ru & # local server
$base/bin/log                                                       # log viewer
