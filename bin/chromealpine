#!/bin/sh
sudo mount -o remount,suid,exec /home/chronos/user
sudo mount -o bind /dev /home/chronos/user/alps/dev
sudo mount -o bind /proc /home/chronos/user/alps/proc
sudo mount -o bind /sys /home/chronos/user/alps/sys
sudo mount -o bind /home/chronos/user /home/chronos/user/alps/home/user/
sudo chroot /home/chronos/user/alps /bin/su - user
