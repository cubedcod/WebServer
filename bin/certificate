#!/bin/sh

## Create

certdir=$(realpath ~/.ssl)
cert=$certdir/CA.pem
[ -e $certdir ] || mkdir $certdir
[ -e $cert ] || openssl req -new -newkey rsa:2048 -sha256 -days 420 -nodes -x509 -extensions v3_ca -keyout $certdir/myCA.pem -out $cert
hash=$(openssl x509 -inform PEM -subject_hash_old -in $cert -noout)

## Install

# Arch
which pacman && su -c "trust anchor --store $cert"

# Debian
which apt-add-repository && su -c "cp $cert /usr/local/share/ca-certificates/CA.crt && update-ca-certificates"

# Termux
if [ -x "$(command -v pkg)" ]; then
    su -c "mount -o rw,remount /"
    su -c "mount -o rw,remount /system"
    su -c "cp  $cert /system/etc/security/cacerts/$hash.0"
    su -c "chmod 644 /system/etc/security/cacerts/$hash.0"
fi

# Void
which xbps-query && su -c "trust anchor --store $cert"
