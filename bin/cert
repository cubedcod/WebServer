#!/bin/sh
cert=CA.pem
# create cert
[ -e $cert ] || openssl req -new -newkey rsa:2048 -sha256 -days 365 -nodes -x509 -extensions v3_ca -keyout myCA.pem -out $cert
hash=$(openssl x509 -inform PEM -subject_hash_old -in $cert -noout)

echo "install CA-cert, Android:"
echo cp $cert /system/etc/security/cacerts/$hash.0
echo chmod 644 /system/etc/security/cacerts/$hash.0
