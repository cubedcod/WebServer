#!/bin/sh
cd ~/web
conf=../src/WebServer/config

# configure network for transparent proxy
uid=$(id -u)
rules=$(realpath ~/src/WebServer/bin/transparent.rules.sh)
su -c "sh $rules $uid"

# launch daemon and proxy
squid -f $conf/squid.conf
unicorn -N -l 127.0.0.1:8000 -l [::1]:8000 -c $conf/unicorn.rb $conf/rack.ru
